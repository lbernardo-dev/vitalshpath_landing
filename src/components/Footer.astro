---
import { Github, Twitter, Linkedin } from "lucide-react";
import { useTranslations } from "../i18n/ui";

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<footer class="py-20 border-t border-gray-200 bg-white/50 backdrop-blur-sm">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8">
      
      <!-- Brand -->
      <div class="flex items-center gap-3">
        <img src={`${import.meta.env.BASE_URL}/assets/images/Icon.png`} alt="VitalsPath Logo" class="w-10 h-10 rounded-xl shadow-md" />
        <span class="text-xl font-semibold tracking-tight text-[#1d1d1f]">VitalsPath</span>
      </div>

      <!-- Links -->
      <div class="flex gap-8 text-sm font-medium text-[#86868b]">
        <a href="#features" class="hover:text-[#1d1d1f] transition-colors">Características</a>
        <a href="#privacy" class="hover:text-[#1d1d1f] transition-colors">Privacidad</a>
        <a href="#" class="hover:text-[#1d1d1f] transition-colors">Soporte</a>
      </div>

      <!-- Social -->
      <div class="flex gap-4">
         <a href="#" class="text-[#86868b] hover:text-[#007aff] transition-colors"><Twitter className="w-5 h-5"/></a>
         <a href="#" class="text-[#86868b] hover:text-[#007aff] transition-colors"><Github className="w-5 h-5"/></a>
      </div>

    </div>
    
    <div class="mt-12 text-center text-xs text-[#86868b]">
        <p>&copy; 2026 VitalsPath. Creado con ❤️ para iOS 18.</p>
    </div>
  </div>
</footer>
