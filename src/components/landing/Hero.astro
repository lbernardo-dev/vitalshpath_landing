---
import { Download, ChevronRight, Star, ShieldCheck } from "lucide-react";
import { useTranslations } from "../../i18n/ui";

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden bg-bg-light">
  
  <div class="clinical-container relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      
      <!-- Text Content: Trust & Clarity -->
      <div class="max-w-2xl animate-fade-in-up">
        
        <!-- Trust Badge -->
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-teal-50 border border-teal-100 text-teal-700 text-sm font-medium mb-8">
            <ShieldCheck className="w-4 h-4" />
            <span>Privacidad y Seguridad Clínica Garantizada</span>
        </div>

        <h1 class="text-display mb-6 text-slate-900">
            {t('hero.title.1')} <br/>
            <span class="text-teal-700 italic">{t('hero.title.2')}</span>
        </h1>
        
        <p class="text-subhead mb-10 text-slate-600 max-w-lg">
          {t('hero.subtitle')}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 mb-12">
            <a href="#" class="clinical-button clinical-button-primary group">
                <Download className="w-5 h-5 mr-2 group-hover:-translate-y-1 transition-transform" />
                Descargar App
            </a>
            <a href="#features" class="clinical-button clinical-button-outline group">
                Cómo funciona
                <ChevronRight className="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" />
            </a>
        </div>

        <!-- Social Proof: Subtle -->
        <div class="flex items-center gap-4 text-sm text-slate-500">
            <div class="flex -space-x-3">
                {[1,2,3].map(i => (
                    <div class="w-10 h-10 rounded-full border-2 border-white bg-slate-200 overflow-hidden">
                         <img src={`https://randomuser.me/api/portraits/women/${i + 40}.jpg`} class="w-full h-full object-cover grayscale opacity-80" />
                    </div>
                ))}
            </div>
            <div class="flex flex-col">
                <div class="flex text-yellow-500">
                    <Star className="w-4 h-4 fill-current" />
                    <Star className="w-4 h-4 fill-current" />
                    <Star className="w-4 h-4 fill-current" />
                    <Star className="w-4 h-4 fill-current" />
                    <Star className="w-4 h-4 fill-current" />
                </div>
                <span>+1000 familias confían en nosotros</span>
            </div>
        </div>

      </div>

      <!-- App Visual: Clean Split -->
      <div class="relative lg:ml-auto animate-slide-up" style="animation-delay: 0.2s">
          <!-- Main Phone -->
          <div class="relative z-20 w-[300px] md:w-[350px] mx-auto">
             <div class="relative aspect-[9/19.5] bg-slate-900 rounded-[55px] border-[8px] border-slate-900 shadow-2xl overflow-hidden ring-1 ring-slate-900/10">
                <img src={`${import.meta.env.BASE_URL}/assets/images/screens/hero-clinical-v1.jpg`} class="w-full h-full object-cover" alt="VitalsPath Dashboard" />
             </div>
          </div>
          
          <!-- Contextual Elements: Floating Cards (No blur, just clean shadow) -->
          <div class="absolute top-[20%] -left-12 z-20 hidden md:block">
              <div class="bg-white rounded-xl shadow-lg border border-slate-100 p-4 flex items-center gap-3 animate-pulse-subtle">
                  <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center text-green-600">
                    <ShieldCheck className="w-5 h-5" />
                  </div>
                  <div>
                      <div class="text-xs font-bold text-slate-400 uppercase tracking-wider">Adherencia</div>
                      <div class="text-lg font-bold text-slate-800">100%</div>
                  </div>
              </div>
          </div>

          <!-- Abstract Background Pattern -->
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[140%] h-[140%] bg-gradient-to-tr from-teal-50 to-blue-50 rounded-full blur-3xl -z-10 opacity-60"></div>
      </div>

    </div>
  </div>
</section>
