---
import { ChevronRight, ArrowRight, PlayCircle, Star, ShieldCheck } from "lucide-react";
import { useTranslations } from "../../i18n/ui";

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<section class="relative pt-40 pb-20 lg:pt-52 lg:pb-32 overflow-hidden">
  
  <div class="container-width relative w-full">
    <div class="flex flex-col items-center text-center">
      
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-surface-light dark:bg-surface-dark border border-black/5 dark:border-white/10 mb-8 animate-fade-in">
        <span class="flex h-2 w-2 relative">
           <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
           <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
        </span>
        <span class="text-xs font-medium uppercase tracking-widest text-text-secondary-light dark:text-text-secondary-dark font-sans">{t('hero.badge')}</span>
      </div>

      <!-- Title -->
      <h1 class="text-premium-title mb-6 max-w-4xl mx-auto animate-slide-up" style="animation-delay: 0.1s;">
        {t('hero.title.1')} <br class="hidden md:block"/>
        <span class="text-gradient leading-tight">{t('hero.title.2')}</span>
      </h1>

      <!-- Subtitle -->
      <p class="text-premium-body mb-10 max-w-2xl mx-auto animate-slide-up" style="animation-delay: 0.2s;">
        {t('hero.subtitle')}
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row items-center gap-4 animate-slide-up" style="animation-delay: 0.3s;">
        <a href="#waitlist" class="px-8 py-4 bg-primary hover:bg-primary-dark text-white text-lg font-medium rounded-full shadow-xl shadow-primary/20 hover:scale-105 transition-all flex items-center gap-2">
          {t('hero.cta.primary')}
          <ChevronRight className="w-5 h-5" />
        </a>
        
        <a href="#features" class="px-8 py-4 bg-surface-light dark:bg-surface-dark text-text-primary-light dark:text-text-primary-dark text-lg font-medium rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-all flex items-center gap-2">
          <PlayCircle className="w-5 h-5 text-text-secondary-light" />
          {t('hero.cta.secondary')}
        </a>
      </div>

      <!-- App Mockup - Center Stage -->
      <div class="mt-20 relative w-full max-w-5xl mx-auto animate-slide-up" style="animation-delay: 0.5s;">
          <div class="relative z-10 flex justify-center">
             <!-- iPhone Frame -->
             <div class="relative w-[300px] md:w-[360px] aspect-[9/19] bg-black rounded-[55px] shadow-2xl border-[8px] border-black overflow-hidden ring-1 ring-white/20">
                <div class="absolute top-0 left-1/2 -translate-x-1/2 w-1/3 h-7 bg-black rounded-b-3xl z-20"></div>
                <img src={`${import.meta.env.BASE_URL}/assets/images/app-mockup.png`} alt="App Interface" class="w-full h-full object-cover" />
             </div>
          </div>
          
          <!-- Background Glow -->
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary/20 rounded-full blur-[120px] -z-10 pointer-events-none"></div>
      </div>
     
      <!-- Social Proof -->
      <div class="mt-16 flex flex-col items-center gap-2 animate-fade-in" style="animation-delay: 0.8s;">
        <div class="flex -space-x-2">
            {[1,2,3,4].map(i => (
                <div class="w-8 h-8 rounded-full border-2 border-bg-light dark:border-bg-dark overflow-hidden">
                    <img src={`https://i.pravatar.cc/100?img=${i+10}`} class="w-full h-full object-cover"/>
                </div>
            ))}
        </div>
        <div class="flex items-center gap-1 text-sm font-medium text-text-secondary-light dark:text-text-secondary-dark">
             <div class="flex text-orange-400">
                {[1,2,3,4,5].map(() => <Star className="w-3 h-3 fill-current" />)}
             </div>
             <span>200+ {t('hero.social')}</span>
        </div>
      </div>

    </div>
  </div>
</section>
