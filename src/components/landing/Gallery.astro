---
const { lang = 'es' } = Astro.props;

// Generate array of 10 screens
const screens = Array.from({ length: 10 }, (_, i) => i + 1);
---

<section id="gallery" class="py-24 bg-bg-light dark:bg-bg-dark overflow-hidden relative">
    <div class="container-width text-center mb-16">
        <h2 class="text-premium-title mb-6">Explora la interfaz</h2>
        <p class="text-premium-body max-w-2xl mx-auto">Dise√±ada para ser intuitiva, hermosa y poderosa.</p>
    </div>

    <!-- Marquee Container -->
    <div class="relative flex overflow-x-hidden group">
        <!-- Gradient Overlay Left -->
        <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-bg-light dark:from-bg-dark to-transparent z-10"></div>
        
        <!-- Marquee Track 1 -->
        <div class="py-12 animate-marquee whitespace-nowrap flex gap-8">
            {screens.map((i) => (
                <div class="relative w-[280px] md:w-[320px] aspect-[9/19] rounded-[40px] border-[8px] border-black dark:border-gray-800 overflow-hidden shadow-2xl shrink-0">
                    <img 
                        src={`${import.meta.env.BASE_URL}/assets/images/screens/screen-${String(i).padStart(2, '0')}.jpg`} 
                        class="w-full h-full object-cover"
                        alt={`App Screen ${i}`}
                        loading="lazy"
                    />
                </div>
            ))}
             {screens.map((i) => (
                <div class="relative w-[280px] md:w-[320px] aspect-[9/19] rounded-[40px] border-[8px] border-black dark:border-gray-800 overflow-hidden shadow-2xl shrink-0">
                    <img 
                        src={`${import.meta.env.BASE_URL}/assets/images/screens/screen-${String(i).padStart(2, '0')}.jpg`} 
                        class="w-full h-full object-cover"
                        alt={`App Screen ${i} Duplicate`}
                        loading="lazy"
                    />
                </div>
            ))}
        </div>
        
        <!-- Gradient Overlay Right -->
        <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-bg-light dark:from-bg-dark to-transparent z-10"></div>
    </div>
</section>

<style>
    .animate-marquee {
        animation: marquee 60s linear infinite;
    }

    @keyframes marquee {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }
</style>
