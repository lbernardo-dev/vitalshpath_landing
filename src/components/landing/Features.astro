---
import { Users, Brain, Pill, Thermometer, Calendar, ClipboardList, Stethoscope } from "lucide-react";
import { useTranslations } from "../../i18n/ui";

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<section id="features" class="section-padding relative overflow-hidden">
  
  <div class="container-width relative z-10">
    <div class="text-center mb-20">
      <h2 class="text-premium-title mb-6">{t('features.subtitle')}</h2>
      <p class="text-premium-body max-w-2xl mx-auto">{t('features.title')}</p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      
      <!-- Feature 1: Wellness (Large) -->
      <div class="glass-card col-span-1 md:col-span-2 row-span-2 p-8 flex flex-col justify-between group">
        <div class="mb-8">
          <div class="w-14 h-14 bg-blue-500/10 rounded-full flex items-center justify-center text-blue-600 mb-6">
            <Users className="w-7 h-7" />
          </div>
          <h3 class="text-3xl font-semibold mb-3 tracking-tight text-text-primary-light dark:text-text-primary-dark">{t('feature.profiles.title')}</h3>
          <p class="text-lg text-text-secondary-light dark:text-text-secondary-dark leading-relaxed max-w-md">
            {t('feature.profiles.desc')}
          </p>
        </div>
        
        <div class="relative h-[300px] w-full rounded-2xl overflow-hidden shadow-lg border border-black/5 dark:border-white/5 mt-auto">
             <img src={`${import.meta.env.BASE_URL}/assets/images/feature-wellness.png`} class="w-full h-full object-cover object-top hover:scale-105 transition-transform duration-700" alt="Wellness Dashboard" />
        </div>
      </div>

      <!-- Feature 2: Smart Scheduler -->
      <div class="glass-card p-8 flex flex-col group relative overflow-hidden">
         <div class="mb-6 relative z-10">
            <div class="w-12 h-12 bg-purple/10 rounded-full flex items-center justify-center text-purple mb-4">
              <Brain className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-semibold mb-2 text-text-primary-light dark:text-text-primary-dark">{t('feature.scheduler.title')}</h3>
            <p class="text-text-secondary-light dark:text-text-secondary-dark">{t('feature.scheduler.desc')}</p>
         </div>
         <div class="mt-4 h-40 w-full rounded-xl overflow-hidden shadow-sm opacity-90 relative z-0">
             <img src={`${import.meta.env.BASE_URL}/assets/images/feature-scheduler.png`} class="w-full h-full object-cover object-top hover:scale-105 transition-transform duration-700" />
         </div>
      </div>

      <!-- Feature 3: Medications -->
      <div class="glass-card p-8 flex flex-col group relative overflow-hidden">
         <div class="mb-6 relative z-10">
            <div class="w-12 h-12 bg-orange-500/10 rounded-full flex items-center justify-center text-orange-500 mb-4">
              <Pill className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-semibold mb-2 text-text-primary-light dark:text-text-primary-dark">{t('feature.medications.title')}</h3>
            <p class="text-text-secondary-light dark:text-text-secondary-dark">{t('feature.medications.desc')}</p>
         </div>
         <div class="absolute bottom-[-10px] right-[-10px] w-32 h-32 opacity-10 rotate-12">
             <img src={`${import.meta.env.BASE_URL}/assets/images/feature-meds.png`} class="w-full h-full object-cover" />
         </div>
      </div>

      <!-- Feature 4: Symptoms (with graphical preview) -->
      <div class="glass-card p-0 col-span-1 flex flex-col justify-between overflow-hidden group">
         <div class="p-8">
            <div class="w-12 h-12 bg-red-500/10 rounded-full flex items-center justify-center text-red-500 mb-4">
                <Thermometer className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-semibold mb-2 text-text-primary-light dark:text-text-primary-dark">{t('feature.symptoms.title')}</h3>
            <p class="text-text-secondary-light dark:text-text-secondary-dark">{t('feature.symptoms.desc')}</p>
         </div>
         <div class="h-32 w-full mt-auto opacity-80 border-t border-black/5 dark:border-white/5">
            <img src={`${import.meta.env.BASE_URL}/assets/images/feature-symptoms.png`} class="w-full h-full object-cover object-top" />
         </div>
      </div>

      <!-- Additional Features List (Compact) -->
      <div class="glass-card col-span-1 md:col-span-2 lg:col-span-1 p-8 flex flex-col gap-6 justify-center">
         <div class="flex gap-4 items-start">
            <div class="w-10 h-10 rounded-full bg-green-500/10 flex items-center justify-center text-green-600 shrink-0"><ClipboardList className="w-5 h-5"/></div>
            <div>
               <h4 class="font-semibold text-text-primary-light dark:text-text-primary-dark">{t('feature.plans.title')}</h4>
               <p class="text-sm text-text-secondary-light dark:text-text-secondary-dark mt-1">{t('feature.plans.desc')}</p>
            </div>
         </div>
         <div class="flex gap-4 items-start">
            <div class="w-10 h-10 rounded-full bg-yellow-500/10 flex items-center justify-center text-yellow-600 shrink-0"><Stethoscope className="w-5 h-5"/></div>
            <div>
               <h4 class="font-semibold text-text-primary-light dark:text-text-primary-dark">{t('feature.conditions.title')}</h4>
               <p class="text-sm text-text-secondary-light dark:text-text-secondary-dark mt-1">{t('feature.conditions.desc')}</p>
            </div>
         </div>
      </div>

      <!-- Calendar Feature -->
      <div class="glass-card col-span-1 md:col-span-2 p-8 flex items-center gap-8 group">
          <div class="flex-1">
             <div class="w-12 h-12 bg-indigo-500/10 rounded-full flex items-center justify-center text-indigo-600 mb-4">
                <Calendar className="w-6 h-6" />
             </div>
             <h3 class="text-2xl font-semibold mb-2 text-text-primary-light dark:text-text-primary-dark">{t('feature.calendar.title')}</h3>
             <p class="text-text-secondary-light dark:text-text-secondary-dark">{t('feature.calendar.desc')}</p>
          </div>
          <div class="hidden sm:block w-40 h-32 bg-surface-light dark:bg-surface-dark rounded-xl border border-black/5 dark:border-white/5 p-3 rotate-3 group-hover:rotate-0 transition-transform duration-500">
             <div class="grid grid-cols-7 gap-1 h-full opacity-50">
                {Array.from({length: 28}).map((_, i) => (
                   <div class={`rounded-[2px] w-full h-full ${i === 12 ? 'bg-primary' : 'bg-gray-200 dark:bg-gray-600'}`}></div>
                ))}
             </div>
          </div>
      </div>

    </div>
  </div>
</section>
